<?xml version="1.0" encoding="iso-8859-1"  ?>

<installation version="1.0">

  <info>
    <appname>GoldRush</appname>
    <appversion>1.0.0</appversion>
    <javaversion>1.6</javaversion>
    <authors>
       <author name="Nicholas Padilla" email="nicholas@monstersoftwarellc.com"/>
    </authors>
    <url>http://www.monstersoftwarellc.com/GoldRush</url>
    <run-privileged /> 
    <uninstaller>${INSTALL_PATH}\Uninstaller</uninstaller>
  </info>

  <locale>
    <langpack iso3="eng"/>
  </locale>

  <guiprefs width="800" height="600" resizable="no">
    <splash>images\peas_load.gif</splash>
    <laf name="substance">
      <os family="windows" />
      <os family="unix" />
      <param name="variant" value="mist-silver" />
    </laf>
    <laf name="substance">
      <os family="mac" />
      <param name="variant" value="mist-aqua" />
    </laf>
    <modifier key="useHeadingPanel" value="yes" />
  </guiprefs>

  <resources>
     <res id="shortcutSpec.xml" src="../GoldRushInstaller/windowsGoldRush/shortcutSpec.xml" />
     <res id="LicencePanel.licence" src="../GoldRushInstaller/licenseGoldRush.txt"/>
     <res id="InfoPanel.info" src="../GoldRushInstaller/readmeGoldRush.txt"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>        
    <panel classname="InfoPanel"/>
    <panel classname="LicencePanel"/>
    <panel classname="TargetPanel"/>
    <panel classname="PacksPanel"/>
    <panel classname="SummaryPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="ShortcutPanel"/>
    <panel classname="FinishPanel"/>
  </panels>

  <packs>
    <pack name="GoldRush" preselected="yes" required="yes">
      <description>The core files needed for the Gold Rush application</description>
      <fileset dir="win32.win32.x86/GoldRush" targetdir="${INSTALL_PATH}" override="true">
      </fileset>
      <executable targetfile="$INSTALL_PATH\goldrush.exe" keep="true"/>
      <executable targetfile="$INSTALL_PATH\mysqlInstall.bat" keep="true" stage="postinstall">
      	<args>
      		<arg value="${INSTALL_PATH}"/>
      	</args>
      </executable>
      <executable targetfile="$INSTALL_PATH\symmetric-ds\bin\install_service.bat" keep="true" stage="postinstall"/>
      <executable targetfile="$INSTALL_PATH\symmetric-ds\bin\startSyncService.bat" keep="true" stage="postinstall"/>
      <executable targetfile="$INSTALL_PATH\setWinPermissions.bat" failure="warn" keep="false" stage="postinstall">
        <os family="windows" />
      </executable>
      <executable targetfile="$INSTALL_PATH\symmetric-ds\bin\uninstall_service.bat" stage="uninstall"/>
      <executable targetfile="$INSTALL_PATH\mysqlUninstall.bat" stage="uninstall">
      	<args>
      		<arg value="${INSTALL_PATH}"/>
      	</args>
      </executable>
    </pack>     
  </packs>

  <native type="izpack" name="ShellLink.dll"/>
  <native type="3rdparty" name="COIOSHelper.dll" stage="both"/>
</installation>